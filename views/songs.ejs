<% include partials/header %>
<table class="table">
    <tr>
        <th>Title</th>
        <th>Album</th>
        <th>Artist</th>
        <th>Year</th>
        <th>BPM</th>
    </tr>
    <% songs.forEach(function(song) {%>
        <tr>
            <td>
                <a href="/songs/<%=song.id%>"><%=song.title%></a>
            </td>
            <td><%=song.album%></td>
            <td><%=song.artist%></td>
            <td>
                <% if (song.year) { %><%=song.year%><% } %>
            </td>
            <td>
                <% if (song.bpm) { %><%=song.bpm%><% } %>
            </td>
        </tr>
    <% }) %>
</table>
<br>
<a class="btn btn-danger" href="/songs/add">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>New song
</a>
<% include partials/footer %>